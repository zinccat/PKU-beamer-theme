\setbeamercolor{subtitle}{parent=pekingred}
\setbeamercolor{author}{parent=glassgrey}
\setbeamercolor{date}{parent=pekingred}
\setbeamercolor{institute}{parent=pekingred}

\setbeamercolor{section title}{parent=pekingred}
\setbeamercolor{subsection title}{parent=pekingred}
\setbeamercolor{frametitle}{parent=pekingred}
\setbeamercolor{background canvas}{parent=pekingred}
\setbeamercolor{structure}{fg=pekingred}

\setbeamercolor{normal text}{fg=black!97}

\setbeamercolor{footnote}{fg=black!97}
